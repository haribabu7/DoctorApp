                         android:background="@color/greydark" />-->


                    <!--<android.support.design.widget.TextInputLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dp"
                        android:layout_marginTop="1.0dp"


                        android:id="@+id/mobile">-->

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40.0dp"
                        android:background="@drawable/edittext"
                        android:drawablePadding="8.0dp"

                        android:textSize="14.0dp"
                        android:id="@+id/email"
                        android:textColor="@color/text_color"
                        android:singleLine="true"
                        android:layout_marginTop="10.0dp"
                        android:paddingStart="10.0dp"
                        android:paddingLeft="10.0dp"
                        android:hint="Email id"

                        android:inputType="textEmailAddress" />

                    <TextView
                        android:text=""
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mobile"
                        android:layout_marginTop="4.0dp"
                        android:textSize="12.0dp"
                        android:id="@+id/emailerr"
                        android:layout_alignRight="@+id/Register"
                        android:layout_alignEnd="@+id/Register"
                    />



                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40.0dp"
                        android:background="@drawable/edittext"
                        android:drawablePadding="8.0dp"

                        android:textSize="14.0dp"
                        android:password="true"
                        android:drawableRight="@drawable/hide"
                        android:paddingStart="10.0dp"
                        android:paddingLeft="10.0dp"
                        android:id="@+id/passwrd1"
                        android:textColor="@color/text_color"
                        android:singleLine="true"
                        android:layout_marginTop="10.0dp"
                        android:hint="password"

                        android:inputType="textEmailAddress" />



                    <TextView
                        android:text=""
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mobile"
                        android:layout_marginTop="-2.0dp"
                        android:id="@+id/passerr"
                        android:textSize="12.0dp"
                        android:layout_alignRight="@+id/Register"
                        android:layout_alignEnd="@+id/Register"
                    />




                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40.0dp"
                        android:background="@drawable/edittext"
                        android:drawablePadding="8.0dp"

                        android:textSize="14.0dp"
                        android:id="@+id/confrmpaswrd1"
                        android:drawableRight="@drawable/hide"
                        android:paddingStart="10.0dp"
                        android:paddingLeft="10.0dp"
                        android:password="true"
                        android:textColor="@color/text_color"
                        android:singleLine="true"
                        android:layout_marginTop="10.0dp"
                        android:hint="Confirm Password"

                        android:inputType="textEmailAddress"/>

                    <AutoCompleteTextView
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="40.0dp"
                        android:layout_marginTop="20.0dp"

                        android:background="@drawable/edittext"
                        android:drawablePadding="8.0dp"
                        android:focusableInTouchMode="true"
                        android:hint="Gender"
                        android:paddingLeft="10.0dp"
                        android:paddingStart="10.0dp"

                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="14.0dp"

                        />

                    <EditText
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="40.0dp"
                        android:layout_marginTop="20.0dp"

                        android:background="@drawable/edittext"
                        android:drawablePadding="8.0dp"
                        android:focusableInTouchMode="true"
                        android:hint="Date of birth"

                        android:paddingLeft="10.0dp"
                        android:paddingStart="10.0dp"

                        android:singleLine="true"
                        android:textColor="@color/text_color"

                        android:textSize="14.0dp" />

                    <TextView
                        android:text=""
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mobile"
                        android:layout_marginTop="0.0dp"
                        android:id="@+id/confirmpaserr"
                        android:textSize="12.0dp"
                        android:layout_alignRight="@+id/Register"
                        android:layout_alignEnd="@+id/Register"
                    />
                    <!--   <CheckBox
                           android:text="I agree to terms and conditions"
                           android:layout_width="match_parent"
                           android:textColor="@color/SkyBlue"
                           android:textStyle="italic"
                           android:textSize="14.0dp"
                         android:layout_marginLeft="10.0dp"
                           android:layout_marginBottom="30.0dp"
                           android:layout_height="wrap_content"
                           android:id="@+id/checkBox" />-->


                </LinearLayout>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="34.0dp"
                    android:background="#1C8B98"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="380dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/button3" />


                <TextView
                    android:text="Login / SignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16.0dp"
                    android:layout_margin="10.0dp"
                    android:layout_marginLeft="120.0dp"
                    android:textStyle="bold"
                    android:id="@+id/Register"
                    android:layout_below="@+id/button3"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>






        </LinearLayout>
        </com.doctor.ScrollViewExt>

    </RelativeLayout>
