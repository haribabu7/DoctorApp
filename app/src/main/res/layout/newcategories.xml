<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.doctor.ScrollViewExt
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="false"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/frontlunges"
            android:background="@color/black"
            android:layout_width="fill_parent" android:layout_height="150dp"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp" app:srcCompat="@drawable/frontlunges"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"

            android:text="Front Lunges"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:layout_alignTop="@+id/frontlunges" android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/crunch"
            android:layout_width="fill_parent" android:layout_height="150dp"
            app:srcCompat="@drawable/sampleimg"
            android:layout_below="@+id/frontlunges" android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Front lunges" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/jumpingjacks"
            android:layout_below="@+id/crunch"
            android:layout_width="fill_parent" android:layout_height="150dp"
            app:srcCompat="@drawable/samplejumpingjacks"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="fill_parent"
            android:textColor="@color/white"
            android:layout_height="30dp"
            android:textSize="30dp"
          android:layout_marginLeft="95dp"
            android:layout_alignTop="@+id/jumpingjacks"
            android:layout_marginTop="56dp" android:text="Jumping jacks"/>
        <ImageView
            android:id="@+id/pushups"
            android:layout_width="fill_parent" android:layout_height="150dp"
            app:srcCompat="@drawable/pushups"
            android:layout_below="@+id/jumpingjacks" android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/pushupstext"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pushups"
            android:text="Front lunges" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/pushupwithrotaion"
            android:layout_width="fill_parent" android:layout_height="150dp"
            app:srcCompat="@drawable/pushupwithrotation"
            android:layout_below="@+id/jumpingjacks" android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/pushuprotationtext"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pushupwithrotaion"
            android:text="Push Up With Rotation" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/squats"
            android:layout_width="fill_parent" android:layout_height="150dp"
            app:srcCompat="@drawable/squats"
            android:layout_below="@+id/pushupwithrotaion" android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/suatstext"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pushupwithrotaion"
            android:text="Push Up With Rotation" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/tricepdips"
            android:layout_width="fill_parent" android:layout_height="150dp"
            app:srcCompat="@drawable/tricepsdips"
            android:layout_below="@+id/jumpingjacks" android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tricedipstext"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/squats"
            android:text="Push Up With Rotation" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
        </LinearLayout>
    </com.doctor.ScrollViewExt>
</LinearLayout>