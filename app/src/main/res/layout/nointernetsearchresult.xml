<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/viewpage"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="0.0dp">
 >
 <TextView
     android:id="@+id/resulterror1"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/resulterror"
     android:ems="10"
     android:fontFamily="Comic Sans MS"
     android:gravity="center"
     android:maxLines="2"
     android:minLines="1"
     android:text="please check your network connection and try again"
     android:textColor="@color/black"
     android:textSize="12.0sp" />
 
 <Button
     android:id="@+id/retry"
     android:layout_width="120.0dp"
     android:layout_height="40.0dp"
     android:layout_below="@+id/resulterror1"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="16dp"
     android:background="@color/bluesaffron"
     
     android:paddingEnd="35dp"
     android:paddingStart="35dp"
     android:text="Retry"
     android:textAllCaps="false"
     android:textColor="@color/white"
     android:textSize="16.0sp" />

 <ImageView
     android:id="@+id/noresult"
     android:layout_width="wrap_content"
     android:layout_height="60.0dp"
     android:src="@drawable/oops"
     android:layout_alignParentTop="true"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="120dp" />

 <TextView
     android:id="@+id/resulterror"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="39dp"
     android:ems="10"
     android:fontFamily="Comic Sans MS"
     android:gravity="center"
     android:maxLines="2"
     android:minLines="1"
     android:text="Something went wrong"
     android:textColor="@color/black"
     android:textSize="12.0sp"
     android:layout_below="@+id/noresult"
  />

</RelativeLayout>
